{
	"server-configuration": {
		"driver": "mongodb",
        "host": "localhost",
        "port": "27017",
		"dbName": "nodejs",
		"user": "",
		"pass": ""
	},
	"roles": ["user", "admin"],
    "default-role": "user",
	"methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
	"access-policy": {
        "/test": {
            "GET":    { "public": true },
            "POST":   { "public": true },
            "PUT":    { "public": true },
            "DELETE": { "public": true }
        },
        "/user": {
            "GET":    {
                "public": false,
                "roles": ["admin"]
            },
            "POST":    {
                "public": false,
                "roles": ["admin"]
            },
            "PUT":    {
                "public": false,
                "roles": ["admin"]
            },
            "DELETE":    {
                "public": false,
                "roles": ["admin"]
            }
        },
        "/signin": {
            "POST": { "public": true }
        },
        "/signup": {
            "POST": { "public": true }
        },
        "/signoff": {
            "POST": { "public": false }
        }
    }
}