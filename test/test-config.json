{
    "api-configuration": {
        "host": "0.0.0.0",
        "port": "8080",
        "private-key": "secret_key",
        "cache-expire-interval": 1
    },
	"db-configuration": {
		"driver": "mongodb",
        "host": "localhost",
        "port": "27017",
		"dbName": "nodejs",
		"user": "",
		"pass": ""
	},
	"methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "files-path": "./uploads/",
    "users": {
        "collection": "users",
        "default-role": "user",
        "roles": ["user", "admin"]
    },
	"access-policy": {
        "/tests": {
            "GET":    { "public": true },
            "POST":   { "public": true },
            "PUT":    { "public": true },
            "DELETE": { "public": true }
        },
        "/foo": {
            "GET":    {
                "public": false,
                "roles": ["user"]
            }
        },
        "/validating": {
            "POST":    {
                "public": true,
                "fields": {
                    "textField": { "type": "string", "required": true },
                    "numberField": { "type": "number", "required": true },
                    "dateField": { "type": "date", "required": false },
                    "booleanField": { "type": "boolean", "required": true }
                }
            }
        },
        "/uploading": {
            "POST":    {
                "public": true,
                "fields": {
                    "fileField": { "type": ["application/json"], "required": true }
                }
            }
        },
        "/redirect": {
            "GET":    {
                "public": true,
                "redirect": "http://localhost:8080/tests"
            }
        },
        "/users": {
            "GET":    {
                "public": false,
                "roles": ["admin"]
            },
            "PUT":    {
                "public": false,
                "roles": ["admin"]
            },
            "DELETE":    {
                "public": false,
                "roles": ["admin"]
            }
        },
        "/signin": { "POST": { "public": true } },
        "/signup": { "POST": { "public": true } },
        "/signoff": { "POST": { "public": false } }
    }
}