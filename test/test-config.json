{
    "api-configuration": {
        "host": "0.0.0.0",
        "port": "8080"
    },
	"db-configuration": {
		"driver": "mongodb",
        "host": "localhost",
        "port": "27017",
		"dbName": "nodejs",
		"user": "",
		"pass": ""
	},
	"methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "users": {
        "collection": "users",
        "default-role": "user",
        "roles": ["user", "admin"]
    },
	"access-policy": {
        "/tests": {
            "GET":    { "public": true },
            "POST":   { "public": true },
            "PUT":    { "public": true },
            "DELETE": { "public": true }
        },
        "/foo": {
            "GET":    { "public": false }
        },
        "/users": {
            "GET":    {
                "public": false,
                "roles": ["admin"]
            },
            "PUT":    {
                "public": false,
                "roles": ["admin"]
            },
            "DELETE":    {
                "public": false,
                "roles": ["admin"]
            }
        },
        "/signin": { "POST": { "public": true } },
        "/signup": { "POST": { "public": true } },
        "/signoff": { "POST": { "public": false } }
    }
}